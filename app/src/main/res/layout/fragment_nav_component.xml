<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Navigation Component"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/set_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:layout_marginTop="20dp"
            android:text="Setup"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="Add App level Dependency: \n1.implementation 'androidx.navigation:navigation-fragment-ktx:2.3.5'
    \n2. implementation 'androidx.navigation:navigation-ui-ktx:2.3.5'"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/safe_args"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="For Safe args:\nAdd to Project Level Dependency and sync\n* classpath(androidx.navigation:navigation-safe-args-gradle-plugin:2.3.5)"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="Add App Level Safe Args Plugin and Sync: \n * id 'androidx.navigation.safeargs.kotlin'"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="If any fragment needs args it can use argument tag with name and type in nav graph."
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:layout_marginTop="10dp"
            android:text="For those dependency and plugin  a fragment will automatically generate Direction File that can also take data as argument if destination fragment needs any data as argument"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:layout_marginTop="10dp"
            android:text="Receive fragment args as -> val args : XFragmentNavArgs by navArgs()"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="More Topic:\nDeep Link using Nav Component (Explicit and Implicit)\n* popUpTo and popUpToInclusive"
            android:textColor="@color/black"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>