<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/fragment_background"
        tools:context=".ui.android.AndroidFragment">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/middle_guideline_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/middle_guideline_horizpntal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/room"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/bordered_background"
            android:text="ROOM"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/room_icon_custom"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/middle_guideline_horizpntal"
            app:layout_constraintEnd_toStartOf="@+id/middle_guideline_vertical"/>

        <TextView
            android:id="@+id/dagger"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/bordered_background"
            android:drawableTop="@drawable/di_icon_custom"
            android:gravity="center"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:text="Dagger2"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/middle_guideline_vertical"
            app:layout_constraintBottom_toTopOf="@id/middle_guideline_horizpntal" />
        <TextView
            android:id="@+id/nav_graph"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/bordered_background"
            android:drawableTop="@drawable/nav_graph_icon"
            android:gravity="center"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:text="Nav\nComponent"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/middle_guideline_vertical"
            app:layout_constraintTop_toBottomOf="@id/middle_guideline_horizpntal" />

        <TextView
            android:id="@+id/mvvm"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/bordered_background"
            android:drawableTop="@drawable/mvvm_icon_custom"
            android:gravity="center"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:text="MVVM"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/middle_guideline_vertical"
            app:layout_constraintTop_toBottomOf="@id/middle_guideline_horizpntal" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
